{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ES6",
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "outDir": "lib",
    "removeComments": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/",
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~base/*": [
        "src/components/base/*"
      ],
      "~common/*": [
        "src/components/common/*"
      ],
      "~loaders/*": [
        "src/router/loaders/*"
      ],
    },
  },
  "include": [
    "src",
    "server.js"
  ],
  "exclude": [
    "node_modules"
  ]
}